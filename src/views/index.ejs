<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJS</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/upload">Home</a>
        <a href="upload">Upload file</a>
    </div>

    <div>
        <div class="w3-container">
            <h2>List user table</h2>

            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <% for(let i=0; i<dataUser.length; i++) { %>
                    <tr>
                        <td>
                            <%= dataUser[i].id%>
                        </td>
                        <td>
                            <%= dataUser[i].firstName%>
                        </td>
                        <td>
                            <%= dataUser[i].lastName%>
                        </td>
                        <td>
                            <a href="/details/user/<%= dataUser[i].id%>"> Details</a>

                            <form action="/edit/user/<%= dataUser[i].id%>" method="GET">
                                <button type="submit">Update</button>
                            </form>
                            <form action="/delete-user" method="post">
                                <input type="text" hidden name="userId" value="<%= dataUser[i].id%>" />
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </table>
        </div>
        <div class="create-user-container">
            <form action="/" method="POST">
                <div>Create a new user:</div>
                <div>
                    <label>FirstName:</label>
                    <input type="text" name="firstName" />
                </div>
                <div>
                    <label>LastName:</label>
                    <input type="text" name="lastName" />
                </div>
                <div>
                    <label>Email:</label>
                    <input type="text" name="email" />
                </div>
                <div>
                    <label>Address:</label>
                    <input type="text" name="address" />
                </div>
                <div>
                    <button type="submit" class="btn-submit">Submit</button>
                </div>
            </form>
        </div>
    </div>


</body>

</html>